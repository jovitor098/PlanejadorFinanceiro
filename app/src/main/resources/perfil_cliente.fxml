<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="planejadorfinanceiro.PerfilClienteController" 
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">
    <Label text="Perfil do Cliente" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="nomeLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        
        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        
        <Label text="Saldo:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="saldoLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Voltar" fx:id="voltarButton" onAction="#handleVoltar"/>
    </HBox>
</VBox> 