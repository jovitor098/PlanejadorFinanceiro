<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import planejadorfinanceiro.ui.componentes.*?>

<VBox alignment="CENTER" prefHeight="681.0" prefWidth="700.0" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="planejadorfinanceiro.PerfilClienteController">
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Perfil do Cliente" />
    
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        
        <Label style="-fx-font-weight: bold;" text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="nomeLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label style="-fx-font-weight: bold;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label style="-fx-font-weight: bold;" text="Saldo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="saldoLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <GraficoSaldo fx:id="graficoSaldo" title="Evolução Saldo" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
        <ComboBox fx:id="boxSelecionarAno" onAction="#handleSelecionarAno" prefWidth="150.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

        <Label alignment="CENTER" style="-fx-font-size: 15; -fx-font-weight: bold;" text="Suas últimas transações" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin></Label>
        <TabelaTransacao fx:id="tabelaTransacao" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TabelaTransacao>
      <Button fx:id="todasTransacaoesButton" onAction="#handleTodasTransacoes" text="Verificar todas as transações" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
    </GridPane>
    
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="voltarButton" onAction="#handleVoltar" text="Voltar" />
    </HBox>
</VBox>
